{
    "manifest_version": 3,
    "name": "Bottom Bar Extension",
    "version": "1.0",
    "description": "Injects a fixed bar at the bottom of the screen",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  